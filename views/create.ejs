<%- include('head.ejs') %>
<style>
    .gradient-custom-2 {
        background: linear-gradient(to right, #009cde, #001c3f);
    }

    @media (min-width: 768px) {
        .gradient-form {
            height: 100vh !important;
        }
    }
    @media (min-width: 769px) {
        .gradient-custom-2 {
            border-top-right-radius: .3rem;
            border-bottom-right-radius: .3rem;
        }
    }
    .button-style{
        background-image: linear-gradient(#009adc, #1e427e);
        border: none
    }

    .button-style:hover{
        box-shadow: 0 5px 5px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
    }

    button.button {
        border-radius: .3rem;
        font-size: 1rem;
        color: black;
        border: solid 3px transparent;
        background-image: linear-gradient(rgba(255, 255, 255, 0), rgba(255, 255, 255, 0)), linear-gradient(101deg, #009adc, #1e427e);
        background-origin: border-box;
        background-clip: content-box, border-box;
        box-shadow: 2px 1000px 1px #fff inset;
    }

    button.button:hover {
        box-shadow: none;
        color: white;
    }
    .center-of-page{
        padding-bottom: 10%;
    }
</style>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<div class="center-of-page">
    <section class="h-100 gradient-form">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-4">
                                    <div class="text-center">
                                        <img src="https://raw.githubusercontent.com/bsp5205/411test/master/public/images/logoNavy.png"
                                             style="width: 185px;" alt="logo">
                                        <h4 class="mt-1 mb-5 pb-1">Welcome</h4>
                                    </div>

                                    <form action="http://localhost:3000/create_prof_account" method="post">
                                        <p>Please create your account</p>

                                        <div class="form-outline mb-1">
                                            <input type="email" id="prof_email" name="prof_email" class="form-control"
                                                   placeholder="University email address" />
                                            <label class="form-label" for="form2Example11">Username</label>
                                        </div>

                                        <div class="form-outline mb-1">
                                            <input type="password" id="prof_pw" name="prof_pw" class="form-control" />
                                            <label class="form-label" for="form2Example22">Password</label>
                                        </div>

                                        <div class="form-outline mb-1">
                                            <input type="password" id="prof_pw_confirm" name="prof_pw_confirm" class="form-control" />
                                            <label class="form-label" for="form2Example22">Confirm Password</label>
                                        </div>

                                        <div class="form-outline mb-1">
                                            <input type="password" id="prof_access_token" name="prof_access_token" class="form-control" />
                                            <label class="form-label" for="form2Example22">Canvas Access Token</label>
                                        </div>

                                        <div class="text-center pt-1 mb-5">
                                            <button class="button-style raise" type="submit">Log in</button>
                                            <a class="text-muted" href="#!">Forgot password?</a>
                                        </div>
                                        <div class="text-center">
                                            <% if (message){%>
                                                <p style="color: red"><%= message %></p>
                                            <% }else{%>
                                                <p></p>
                                            <%}%>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                                <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                    <h4 class="mb-4">Be part of something big. Be part of Penn State Behrend.</h4>
                                    <p class="small mb-0">Discover the best of both worldsâ€”the advantages of a major research university in a welcoming college community.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<%- include('footer.ejs') %>