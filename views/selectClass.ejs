<%- include('head.ejs') %>
<!DOCTYPE html>

<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<style>
    .flex-container {
        display: flex;
        justify-content: center;
    }
    .size{
        width: 50%;
    }
    .buttonstyle{
        background-image: linear-gradient(#009adc, #1e427e);
        color:white;
    }

    .classButtons {
        display: table;
        margin: 0 auto;
    }
    .center-of-page{
        padding-bottom: 10%;
    }
    .center {
        margin: auto;
    }

    .getID{

    }

    .getButtons{

    }
    .large{
        margin-top: 10%;
    }
    .block {
        display: block;
        width: 100%;
        border: none;
        background-color: #04AA6D;
        padding: 14px 28px;
        font-size: 16px;
        cursor: pointer;
        text-align: center;
    }
</style>
<div class="">
    <div>
        <section class="gradient-form">
            <div class="py-5">
                <div class="row justify-content-center align-items-center">
                    <div class="card">
                        <div class="">
                            <div class="card-body">
                                <div class="text-center">
                                    <h1>Current Courses:</h1>
                                    <hr>
                                </div>
                                <div class="">
                                    <div class="classButtons">
                                        <table>
                                            <% for (let i = 0; i < course_list.length; i++) { %>
                                                <tr>
                                                    <td><button class="button-style raise large block" onclick="window.location.href = 'http://localhost:3000/courseOptions-:<%= course_list[i]['course_id'] %>'"><%= course_list[i].course_name %> Section <%=course_list[i].section_number%></button></td>
                                                </tr>
                                            <% } %></table>
                                        <hr>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>



