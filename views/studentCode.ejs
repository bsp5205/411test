<%- include('head.ejs') %>
<!DOCTYPE html>
<style>
    .button-style{
        background-image: linear-gradient(#009adc, #1e427e);
        border-color: white;
        border-radius: 5%;
    }
    .flex-container {
        display: flex;
        align-items: flex-start;
    }

    .size{
        width: 50%;
        padding-top: 4%
    }
    input{
        resize: horizontal;
    }
</style>
    <html>
    <head>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    </head>

    <body>
    <p>

    </p>
    <div class="flex-container" style="height: 30%">
        <div class="size">
            <form action="http://localhost:3000/codeTest" method="post">
                <p>Please Enter a Code</p>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                    </div>
                    <input type="number" id="codeTest" name="codeTest" class="form-control" placeholder="Class Code" aria-label="Username" aria-describedby="basic-addon1" required>
                    <button type="submit" class="button-style">Submit</button>
                </div>
            </form>
            <% if (wrong !== ""){%>
                <p><%= wrong %></p>
            <% }%>
        </div>
    </div>
    </body>
    </html>
<%- include('footer.ejs') %>