<%- include('head.ejs') %>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<div class="center-of-page">
    <section class="h-100 gradient-form">
        <div class="py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="card">
                    <div class="">
                        <div class="card-body">
                            <div class="text-center">
                                <img src="https://raw.githubusercontent.com/bsp5205/411test/master/public/images/logoNavy.png"
                                     style="width: 185px;" alt="logo">
                                <h4 class="mt-1 mb-5 pb-1">Please enter your Canvas access token</h4>
                            </div>
                            <form action="http://localhost:3000/takeAccessToken" method="post">
                                <p>Please login to your account</p>
                                <div class="form-outline mb-4">
                                    <input type="password" id="access_token" name="access_token" class="form-control"
                                           placeholder="Access Token" />
                                </div>
                                <div class="text-center pt-1 mb-5">
                                    <button class="button-style raise" type="submit">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>



